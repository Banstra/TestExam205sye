<Page x:Class="Test205sye.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test205sye.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
            <TextBlock Foreground="White" Background="Black" >Авторизация</TextBlock>
            <TextBlock Foreground="White" Background="Black">Login</TextBlock>
            <TextBox Name="login"></TextBox>
            <TextBlock Foreground="White" Background="Black">Password</TextBlock>
            <PasswordBox Name="Password1" PasswordChar="*"></PasswordBox>
            <TextBox Name="Password" Visibility="Collapsed" ></TextBox>
            <CheckBox Name="Check_pass" Content="Показать пароль" Checked="Check" Unchecked="Uncheck"></CheckBox>
            <Button Click="Button_Click">Register</Button>
        </StackPanel>
    </Grid>
</Page>
